<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="32dp">

        <!-- Logo -->
        <ImageView
            android:id="@+id/splashLogo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_launcher_foreground"
            android:contentDescription="Logo Calakan"
            android:alpha="0"
            android:layout_marginBottom="24dp" />

        <!-- App Name -->
        <TextView
            android:id="@+id/splashAppName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calakan"
            android:textSize="36sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:alpha="0"
            android:letterSpacing="0.15"
            android:layout_marginBottom="8dp" />

        <!-- Full Name -->
        <TextView
            android:id="@+id/splashAppFullName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Catatan Amaliyah Kegiatan Ramadan"
            android:textSize="14sp"
            android:textColor="@color/white_70"
            android:alpha="0"
            android:gravity="center"
            android:layout_marginBottom="4dp" />

        <!-- School Name -->
        <TextView
            android:id="@+id/splashSchoolName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SMKN 1 Ciamis"
            android:textSize="13sp"
            android:textColor="@color/white_50"
            android:alpha="0"
            android:gravity="center" />

    </LinearLayout>

    <!-- Version at Bottom -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:text="v1.0.0"
        android:textSize="12sp"
        android:textColor="@color/white_50" />

</RelativeLayout>
